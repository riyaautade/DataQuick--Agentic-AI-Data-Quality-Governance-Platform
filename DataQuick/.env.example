# Database (SQLite - local file-based, no setup needed)
# DATABASE_PATH is automatically set to dataquick.db

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_THEME_PRIMARYCOLOR=#667eea

# LLM Configuration (Optional - uses mock fallback if not available)
LLM_TYPE=ollama  # Options: ollama, gpt4all, local_transformers
OLLAMA_MODEL=llama2  # Other options: mistral, neural-chat, etc.
OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_LINEAGE=true
ENABLE_DRIFT_DETECTION=true
